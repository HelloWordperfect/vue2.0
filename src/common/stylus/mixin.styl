boder-1px($color)
	position:relative
	&:after
		display:block
		width:100%
		position:absolute
		left:0
		bottom:0
		border-top:1px solid $color
		content:''

boder-none()
	&:after
		display:none
		
bg-image($url)
	background-image:url($url+"@2x.png")
	@media(-webkit-min-device--pixel-ratio:3),(-webkit-min-device--pixel-ratio:3)
		background-image:url($url+"@3x.png")